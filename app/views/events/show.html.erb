<div class="col-md-offset-2 col-md-8">
  <div class="panel panel-success">
    <div class="panel-heading">      
        <div class="row">
          <div class="col-md-6">
            <h4>Event Details</h4>   
          </div>
          <div class="col-md-6 text-right">
            <%= link_to 'Edit', edit_event_path(@event), class: 'btn btn-sm btn-primary' %>  
            <%= link_to 'Delete', event_path(@event), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
          </div>
        </div>
      
    </div>
    <div class="panel-body">
      <h1>
        <%= @event.name %>
      </h1>
      <p>
        <%= @event.description %>
      </p>
      <p class="text-muted">
        Agenda: <%= @event.agenda %>
      </p>
      <p class="lead text-info">
        Venue: <%= @event.venue %> <br>
        <small>
          Date: <%= @event.event_date.strftime('%d-%b-%Y') if @event.event_date.present? %>
        </small>
      </p>
    </div>
  </div>

  <table class="table table-bordered">
    <tr>
      <th>
        S.no
      </th>
      <th>
        Participant Name
      </th>
      <th>
        Gender
      </th>
      <th>
        Email
      </th>
      <th>
        Contact Number
      </th>
    </tr>
    <% i = 0 %> 
    <% @event.participants.each do |participant| %>
      <tr>
        <td>
          <%= i +=1 %>
        </td>
        <td>
          <%= participant.name %>
        </td>
        <td>
          <%= participant.gender %>
        </td>
        <td>
          <%= participant.email %>
        </td>
        <td>
          <%= participant.contact %>
        </td>
      </tr>
    <% end %>  
  </table>
</div>