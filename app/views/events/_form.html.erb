<%= form_for(@event, :html => { :class => 'form-horizontal'}) do |f| %>
  
  <fieldset>
    <div class="form-group">
      <div class="col-md-2">
        <%= f.label :name, "Event Name", :class => 'label-control' %>
      </div>
      <div class="col-md-8">
        <%= f.text_field :name, :placeholder => 'Enter Event Name', :class => 'form-control', autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-2">
        <%= f.label :description, "Event Description", :class => 'label-control' %>
      </div>
      <div class="col-md-8">
        <%= f.text_area :description, :placeholder => 'Enter Event Description', :class => 'form-control', rows:'6' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-2">
        <%= f.label :technology, "Technology", :class => 'label-control' %><br />
      </div>
      <div class="col-md-8">
        <%= f.text_field :technology, :placeholder => 'Enter Technology', :class => 'form-control' %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-md-2">
        <%= f.label :agenda, "Agenda", :class => 'label-control' %>
      </div>
      <div class="col-md-8">
        <%= f.text_area :agenda, :placeholder => 'Enter Event Agenda', :class => 'form-control', rows:'6' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-2">
        <%= f.label :venue, "Venue", :class => 'label-control' %><br />
      </div>
      <div class="col-md-8">
        <%= f.text_field :venue, :placeholder => 'Enter Venue', :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-2">
        <%= f.label :event_date, "Date", :class => 'label-control' %><br />
      </div>
      <div class="col-md-8">
        <%= f.date_field :event_date, :placeholder => 'Enter Venue', :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-offset-4 col-md-6"> 
       <%= f.submit "Submit", :class => "btn btn-primary" %>
      </div>
    </div>
  </fieldset>  

<% end %>