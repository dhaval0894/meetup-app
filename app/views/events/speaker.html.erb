<%= form_for(@speaker, as: :speaker, url: event_speakers_path(@event.id),:html => { :class => 'form-horizontal'}) do |f| %>
  
  <fieldset>
    <div class="form-group">
      <div class="col-md-2">
        <%= f.label :name, "Full Name", :class => 'label-control' %>
      </div>
      <div class="col-md-8">
        <%= f.text_field :name, :placeholder => 'Enter Full Name', :class => 'form-control', autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-2">
        <%= f.label :email, "Email", :class => 'label-control' %><br />
      </div>
      <div class="col-md-8">
        <%= f.text_field :email, :placeholder => 'Enter Email-ID', :class => 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-2">
        <%= f.label :bio, "Bio", :class => 'label-control' %>
      </div>
      <div class="col-md-8">
        <%= f.text_area :bio, :placeholder => 'Enter Bio', :class => 'form-control', rows:'6' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-offset-4 col-md-6"> 
       <%= f.submit "Submit", :class => "btn btn-primary" %>
      </div>
    </div>
  </fieldset>  

<% end %>