<div class="panel panel-success">
	<div class="panel-heading">
		Upcoming Events
	</div>
	<div class="panel-body">
    <% @events.each do |event| %>
      <div class="col-md-4">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <%= event.name %>
          </div>
          <div class="panel-body">
            <p class="lead">
              <%= event.description %> <br/>
              <small>
                <%= event.technology %>
              </small>
            </p>      
            <p>
              <small class="text-info">
                <%= event.venue %> - <%= event.event_date.strftime('%d-%b-%Y') if event.event_date.present? %>
              </small>
            </p>
            <%= link_to 'Register Here', event_participants_new_path(event.id), class:'btn btn-sm btn-primary' %>
            <%= link_to 'View Details', event_path(event.id), class:'btn btn-sm btn-success' %>
          </div>  
        </div>
      </div>
    <% end %>  
	</div>
</div>